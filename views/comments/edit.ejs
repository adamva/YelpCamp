<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit Comment</h1>
        </div>
        
        <div class="col-12 col-sm-8 col-md-5">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="text">Text</label>
                    <input class="form-control" type="text" name="comment[text]" id="text" value="<%= comment.text %>">
                </div>

                <div class="form-group">
                    <label for="submit">Sumbit</label>
                    <button class="btn btn-lg btn-primary btn-block" id="submit">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>
    </div>  
</div>

<%- include("../partials/footer") %>