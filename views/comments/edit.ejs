<%- include("../partials/header") %>

<div class="row m-0 flex-grow-1">
    <div class="d-none d-md-flex col-sm-6 bg-img-login">
        <div class="container d-flex align-items-center">
            <img class="img-thumbnail" src="<%= campground_img %>" alt="Campground image">
        </div>
    </div>

    <div class="col-md-6 bg-light align-items-center">
        <div class="h-100 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-7 mx-auto">
                        <h3 class="display-4">Edit Comment</h3>
                        <hr class="my-4">
                        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                            <div class="form-group">
                                <label for="text" class="sr-only">Text</label>
                                <input class="form-control rounded-pill border-1" type="text" name="comment[text]" id="text" value="<%= comment.text %>" required autofocus>
                            </div>                        
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                            </div>
                            <div class="form-group">
                                <a href="/campgrounds">Go Back</a>                        
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>