<%- include("../partials/header") %>

<div class="row m-0 flex-grow-1">
    <div class="d-none d-md-flex col-sm-6 bg-img"></div>

    <div class="col-md-6 bg-light align-items-center">
        <div class="h-100 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-7 mx-auto">
                        <h3 class="display-4">New Campground</h3>
                        <form action="/campgrounds" method="POST">
                            <div class="form-group">
                                <label for="name" class="sr-only">Name</label>
                                <input class="form-control rounded-pill border-1" type="text" name="name" id="name" placeholder="Name" required autofocus>
                            </div>
                        
                            <div class="form-group">
                                <label for="price" class="sr-only">Price</label>
                                <input class="form-control rounded-pill border-1" type="number" name="price" id="price" placeholder="Price" min="0" step="0.01" required autofocus>
                            </div>
                        
                            <div class="form-group">
                                <label for="image" class="sr-only">Image</label>
                                <input class="form-control rounded-pill border-1" type="text" name="image" id="image" placeholder="Image URL" required autofocus>
                            </div>
                        
                            <div class="form-group" class="sr-only">
                                <label for="description" class="sr-only">Description</label>
                                <input class="form-control rounded-pill border-1" type="text" name="description" id="description" placeholder="Description" required autofocus>
                            </div>
                        
                            <div class="form-group" class="sr-only">
                                <label for="location" class="sr-only">Location</label>
                                <input class="form-control rounded-pill border-1" type="text" name="location" id="location" placeholder="Campground Location" required autofocus>
                            </div>
                        
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block rounded-pill">Submit!</button>
                            </div>
                        </form>
                        
                        <a href="/campgrounds">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>