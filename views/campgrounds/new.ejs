<%- include("../partials/header") %>

<div class="row m-0 flex-grow-1">
    <div class="d-none d-lg-flex col-sm-6 bg-img-new"></div>

    <div class="col-lg-6 bg-light align-items-center">
        <div class="h-100 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-7 mx-auto">
                        <h3 class="display-4">New Campground</h3>
                        <hr class="my-4">
                        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="name" class="sr-only">Name</label>
                                <input class="form-control rounded-pill border" type="text" name="campground[name]" id="name" placeholder="Name" required autofocus>
                            </div>
                        
                            <div class="form-group">
                                <label for="price" class="sr-only">Price</label>
                                <input class="form-control rounded-pill border" type="number" name="campground[price]" id="price" placeholder="Price" min="0" step="0.01" required autofocus>
                            </div>
                            
                            <div class="input-group mb-3 rounded-pill bg-white border">
                                <label for="price" class="sr-only">Upload Image</label>
                                <label for="image" class="text-secondary mb-0 mt-2 ml-2"><i class="fa fa-cloud-upload mr-2 text-muted"></i>Upload Image</label>
                                <input class="form-control border-1" type="file" name="image" id="image" accept="image/*" required autofocus>
                            </div>

                            <div class="form-group" class="sr-only">
                                <label for="description" class="sr-only">Description</label>
                                <input class="form-control rounded-pill border" type="text" name="campground[description]" id="description" placeholder="Description" required autofocus>
                            </div>
                        
                            <div class="form-group" class="sr-only">
                                <label for="location" class="sr-only">Location</label>
                                <input class="form-control rounded-pill border" type="text" name="campground[location]" id="location" placeholder="Campground Location" required autofocus>
                            </div>
                        
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block rounded-pill">Submit!</button>
                            </div>

                            <div class="formgroup">
                                <a href="/campgrounds">Go Back</a>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>