<%- include("../partials/header") %>

<div class="row m-0 flex-grow-1">
    <div class="d-none d-md-flex col-sm-6 bg-img-edit">
        <div class="container d-flex align-items-center">
            <img class="img-thumbnail" src="<%= campground.image %>" alt="<%= campground.name %>">
        </div>
    </div>

    <div class="col-md-6 bg-light align-items-center">
        <div class="h-100 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-7 mx-auto">
                        <h3 class="display-4">Edit <%= campground.name %> </h3>
                        <hr class="my-4">
                        <!-- notice that for editing forms you need to use method-override in the action where you end with '?_method=PUT' -->
                        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                            <div class="form-group">
                                <label for="name" class="sr-only">Name</label>
                                <input class="form-control rounded-pill border-1" type="text" name="campground[name]" id="name" value="<%= campground.name %>" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="price" class="sr-only">Price</label>
                                <input class="form-control rounded-pill border-1" type="number" name="campground[price]" id="price" value="<%= campground.price %>" min="0" step="0.01" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="image" class="sr-only">Image</label>
                                <input class="form-control rounded-pill border-1" type="text" name="campground[image]" id="image" value="<%= campground.image %>" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="description" class="sr-only">Description</label>
                                <input class="form-control rounded-pill border-1" type="text" name="campground[description]" id="description" value="<%= campground.description %>" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="location" class="sr-only">Location</label>
                                <input class="form-control rounded-pill border-1" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required autofocus>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block rounded-pill">Submit!</button>
                            </div>
                        </form>

                        <a href="/campgrounds">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>