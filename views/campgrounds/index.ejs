<%- include("../partials/header") %>

<div class="container fill">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View campgrounds from across the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h2>
        </div>
        
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img src="<%= campgrounds.image %>" class="card-img-top" alt="<%= campgrounds.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= campgrounds.name %></h5>
                        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>    
</div>

<%- include("../partials/footer") %>